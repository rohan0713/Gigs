<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    android:background="@color/synth_color"
    android:clipChildren="false">

        <club.cred.synth.views.ElevatedView
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" />

        <club.cred.synth.views.SynthImageButton
            android:id="@+id/offer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/camapign_name"
            android:gravity="center"
            tools:src="@drawable/twitter" />

        <TextView
            android:id="@+id/camapign_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="40dp"
            android:ellipsize="none"
            android:maxLines="4"
            android:text="Cloud DMS"
            android:textAlignment="textStart"
            android:textColor="@color/copper_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gigs_earn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/camapign_name"
            android:layout_marginStart="25dp"
            android:gravity="center"
            android:text="Earn upto 5rs"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <club.cred.synth.views.SynthButton
            android:id="@+id/visit_offer"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@id/gigs_earn"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Visit Offer"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            app:neuButtonType="elevated_soft" />
</RelativeLayout>