<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="170dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    android:background="@color/synth_color"
    android:clipChildren="false">

        <club.cred.synth.views.ElevatedView
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="180dp"
            android:layout_height="170dp"/>

        <club.cred.synth.views.SynthImageButton
            android:id="@+id/offer"
            android:layout_toEndOf="@id/gigs_earn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/gigs_earn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Cloud DMS"
            android:textColor="@color/copper_text_color"
            android:textSize="16sp" />

        <club.cred.synth.views.SynthButton
            android:id="@+id/visit_offer"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@id/gigs_earn"
            android:layout_marginStart="35dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Visit Offer"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            app:neuButtonType="elevated_soft" />
</RelativeLayout>