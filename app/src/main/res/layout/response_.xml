<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/payBy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            tools:src="@drawable/twitter" />

        <TextView
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/payBy"
            android:text="Money Transferred"
            android:textColor="@color/copper_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/money_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text=""
            android:textColor="@color/copper_text_color"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/info"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="13dp"
            android:visibility="gone"
            android:src="@drawable/info_image"
            app:tint="@color/copper_text_color" />

        <TextView
            android:id="@+id/paytm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_toStartOf="@id/info"
            android:visibility="gone"
            android:text="Invalid Paytm Number"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/money_trans_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/money_trans"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>