<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/synth_color"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    tools:context=".getImage">

    <RelativeLayout
        android:id="@+id/share_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:clipChildren="false"
        android:onClick="screenshot"
        tools:ignore="OnClick">

        <TextView
            android:id="@+id/gig_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Upstox Account"
            android:textColor="@color/copper_text_color"
            android:textSize="28sp" />

        <RelativeLayout
            android:id="@+id/layoutR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gig_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:clipChildren="false">

            <club.cred.synth.views.ElevatedView
                android:id="@+id/elevatedf"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp" />

            <ImageView
                android:id="@+id/gigs_image"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/twitter" />

            <TextView
                android:id="@+id/gig_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:layout_toEndOf="@id/gigs_image"
                android:text="Share &amp; Earn\n upto 450rs"
                android:textColor="@color/copper_text_color"
                android:textSize="20sp" />

            <club.cred.synth.views.ElevatedView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/elevatedf"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gigs_image"
                android:layout_marginStart="50dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/copper_text_color_30"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/person" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gig_offer"
                android:layout_marginStart="50dp"
                android:layout_marginTop="80dp"
                android:layout_toEndOf="@id/profile_image"
                android:text="Sarthak Goel"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/user_gigs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_toEndOf="@id/profile_image"
                android:text="Gigs Completed:- 04"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_gigs"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:text="Total money earned until now: â‚¹ 400 "
                android:textColor="@color/copper_text_color"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/wave__1" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>